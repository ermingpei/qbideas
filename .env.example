# qbideas Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI API Keys (Required for idea generation)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# Stripe Payment Processing (Use test keys for development)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# JWT Authentication (Generate a secure random string)
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================================================
# Database Configuration (Auto-configured for local development)
# =============================================================================
DATABASE_URL=postgresql://qbideas:dev_password@postgres:5432/qbideas
REDIS_URL=redis://redis:6379

# =============================================================================
# Email Configuration (Optional for local development)
# =============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@qbideas.com
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# =============================================================================
# External APIs (Optional - for enhanced idea generation)
# =============================================================================
NEWS_API_KEY=your-news-api-key-here
MARKET_DATA_API_KEY=your-market-data-api-key-here
GOOGLE_TRENDS_API_KEY=your-google-trends-api-key-here

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
API_PORT=3000
AUTH_PORT=3001
AI_PIPELINE_PORT=8000
FRONTEND_PORT=3002

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_AUTH_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# =============================================================================
# File Storage (Auto-configured for local development)
# =============================================================================
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=qbideas-files

# For production (GCP Cloud Storage)
# STORAGE_PROVIDER=gcs
# GCS_BUCKET=qbideas-prod-files
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# =============================================================================
# Monitoring & Analytics (Optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=GA-your-analytics-id-here

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# AI Pipeline Configuration
# =============================================================================
IDEA_GENERATION_SCHEDULE=0 6 * * *
MAX_CANDIDATE_IDEAS=50
MIN_QUALITY_SCORE=7.0
PREMIUM_TIER_THRESHOLD=8.5

# =============================================================================
# Revenue Sharing
# =============================================================================
CONTRIBUTOR_UNLOCK_SHARE=0.60
CONTRIBUTOR_SERVICE_SHARE=0.30
MINIMUM_PAYOUT_AMOUNT=50.00

# =============================================================================
# Security
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3002

# =============================================================================
# Development Tools
# =============================================================================
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true